extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio
      h3 Let's make the web great together!
      
      p.lead.text-light
        | This portfolio showcases my recent projects, providing a short overview of each project, along with title and a link to the live-project-site.

  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

     each project, index in projects
 
      .cell
         a(href=`/project/${index}`)
          img.thumbnail(src=`${project.image_urls[0]}`)
          h5=project.project_name

           
              